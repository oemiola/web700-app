<div class="row">
  <div class="col-md-12">
    <br>
    <h2>Students</h2>
    <hr />

    <!-- Add the "Add New Student" button here -->
    <a href="/students/add" class="btn btn-success float-right">Add New Student</a>

    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Student Num</th>
            <th>Full Name</th>
            <th>Email</th>
            <th>Address</th>
            <th>Status</th>
            <th>Course ID</th>
            <!-- New column for the "remove" link -->
            <th></th>
          </tr>
        </thead>
        <tbody>
          {{#each students}}
            <tr>
              <td>{{studentNum}}</td>
              <td><a href="/student/{{studentNum}}">{{firstName}} {{lastName}}</a></td>
              <td><a href="mailto:{{email}}">{{email}}</a></td>
               <td>{{addressStreet}}, {{addressCity}}, {{addressProvince}}</td>
              <td>{{status}}</td>
              <td><a href="/students?course={{course}}">{{course}}</a></td>
              <!-- "remove" link button for each student -->
              <td>
                <a href="/student/delete/{{studentNum}}" class="btn btn-danger">remove</a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

  </div>
</div>

{{#unless students}}
  <div class="col-md-12 text-center">
    <strong>{{message}}</strong>
  </div>
{{/unless}}
